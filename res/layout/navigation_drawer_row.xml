<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/navdrawerrow_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12sp"
        android:layout_marginTop="10sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:width="30sp"
/>

    <TextView
        android:id="@+id/navdrawerrow_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="5sp"
        android:layout_toRightOf="@+id/navdrawerrow_image"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/navdrawerrow_example"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/navdrawerrow_title"
        android:layout_below="@+id/navdrawerrow_title"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic" />

</RelativeLayout>