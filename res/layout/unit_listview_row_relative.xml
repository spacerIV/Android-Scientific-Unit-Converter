<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/unit_listview_row_nicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:gravity="left"
        android:padding="3sp"/>

    <TextView
        android:id="@+id/unit_listview_row_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic" 
        android:layout_toRightOf="@+id/unit_listview_row_nicename"
        android:padding="3sp" />

    <TextView
        android:id="@+id/unit_listview_row_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/unit_listview_row_result"
        android:padding="3sp" />

</RelativeLayout>